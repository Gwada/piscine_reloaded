NAME = libft.a
SRC_C = ft_putchar.c /
		ft_putstr.c /
		ft_strcmp.c /
		ft_strlen.c /
		ft_swap.c /
SRC = (addprefix srcs/, SRC_C)
SRC_O = $(SRC_C:.c=.o)
HEADERS = includes/ft.h

all: $(NAME)

$(NAME):
	gcc -c -Wall -Wextra -Werror $(SRC) $(HEADERS)
	ar rc $(NAME) $(SRC_O)
	ranlib $(NAME)

clean :
	rm -rf $(SRC_O)

fclean : clean
	rm -rf $(NAME)

re : fclean all
